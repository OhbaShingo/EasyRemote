<Window x:Class="EasyRemote.Dialog.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyRemote.Dialog"
        mc:Ignorable="d"
        Title="ログ" Height="450" Width="600" MinHeight="450" MinWidth="600"  Loaded="onLoaded" Closed="onClosed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="AUTO"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="5" Orientation="Horizontal">
            <Button x:Name="m_clearButton" Content="  クリア  " Margin="0,0,5,0" Click="onClearButton"></Button>
            <Button Content="  デバッグ用  "  Click="onDebugClick" Visibility="Hidden"/>
        </StackPanel>

        <!-- ログ表示用 ListView　-->
        <ListBox Grid.Row ="1" x:Name="m_LogListBox"  Margin="10,5"/>

        <!-- 画面下部　各種ボタン-->
        <StackPanel Grid.Row="2" Margin="5,0">
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--
                <CheckBox Grid.Column="0" x:Name="m_autoSaveCheck" Content="ログ自動保存する"  VerticalAlignment="Center" Checked="onAutoSaveCheck" Unchecked="onAutoSaveUnCheck"  />
                <Button Grid.Column="1" x:Name="m_LogSaveFolderButton" Content="  保存先  " Margin="20,0,0,0" Click="onLogSaveFolderButton"/>
                <TextBox Grid.Column="2" x:Name="m_LogFolderText" Margin="1,0" />
                -->
            </Grid>
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <!--
                    <Button x:Name="m_LogSaveButton" Content="  ログ保存  " Click="onLogSaveButton"/>
                    -->
                </StackPanel>
                <Button Grid.Column="2" x:Name="m_OKButton" Content="　　閉じる 　  " Click="onOK" />
            </Grid>


        </StackPanel>


        <!--       
        
        <Grid Grid.Row="1" Margin="5,5,0,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5" Orientation="Horizontal" >
                <CheckBox x:Name="m_autoSaveCheck" Content="自動でログ保存する"  VerticalAlignment="Center"  />
                <Label Content="       "/>
                <Button x:Name="m_LogSavingFolderButton" Content="  保存先  "/>
                <TextBox x:Name="m_LogFolderText" Margin="1,0" HorizontalAlignment="Right" />

            </StackPanel>


        </Grid>
-->
    </Grid>
</Window>
